<%= form_with(model: task) do |form| %>
  <% if task.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
        <% task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label 'タスク名', style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label '終了期限', style: "display: block" %>
    <%= form.datetime_field :end_date %>
  </div>

  <div>
    <%= form.label '優先順位', style: "display: block" %>
    <%= form.select :priority, options_for_select(Task.priorities_i18n.invert), include_blank: "選択してください" %>
  </div>

  <div>
    <%= form.label 'ステータス', style: "display: block" %>
    <%= form.select :status, options_for_select(Task.statuses_i18n.invert), include_blank: "選択してください" %>
  </div>

  <div>
    <%= form.label '説明', style: "display: block" %>
    <%= form.text_area :explanation %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
